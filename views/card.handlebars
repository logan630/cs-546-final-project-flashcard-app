<main>
    <h1 id="card-front-h1" class="card-front-h1">{{cardFront}}</h1>
    <h2 id="card-back-h2" class="card-back-h2">{{cardBack}}</h2>
    <div id="error3" class="error3" hidden>{{errorMessage}}</div>
    <p>Edit card:</p>
    <form action="/protected/decks/{{id}}/cards/{{cardFront}}" id="edit-card-form" class="edit-card-form">
        <label for="newCardFrontInput">Front</label>
        <input id="newCardFrontInput" type="text" name="newCardFrontInput"> <br>
        <label for="newCardBackInput">Back</label>
        <textarea id="newCardBackInput" name="newCardBackInput" rows="4" cols="30"></textarea> <br>
        <button type="submit">Edit this card</button>
    </form>
    <nav>
        <a href="/protected/decks/{{id}}">Back to {{deckName}}</a>
        <div class="align-right">
            <button type="submit" class="delete-card" id="delete-card">Delete this card</button>
        </div>
    </nav>
</main>